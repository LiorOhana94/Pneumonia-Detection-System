<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <link rel="stylesheet" href="/stylesheets/search.css">
    <title>Medikals</title>
</head>

<body>
    <aside>
        <figure>
            <div id="avatar"></div>
            <figcaption>Lior Ohana</figcaption>
        </figure>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/authed/aboutPage">About</a></li>
                <li><a href="/authed/uploadPage">Upload</a></li>
                <li><a href="/authed/searchPage">Search</a></li>
            </ul>
        </nav>
    </aside>
    <main>
        <div id="main-columns">
            <div id="left-column">
                <h3>Medikals <img src="/images/Medikals.jpg" alt="Logo"></h3>
                <form>
                    <input type="number" id="scan-id-number" placeholder="Enter Scan ID" />
                    <div id="scan-not-found" style="display: none;">
                        <p><b>Scan not found.</b> </br>Please re-enter scan ID.</p>
                    </div>
                    <input class="buttons-class" id="search-button" type="button" value="Search"
                        onclick="searchScanById()">
                </form>
            </div>
            <div id="right-column">
                <img src="/images/lungs-placeholder.jpg" alt="Chest X-Ray" height="250" width="250" id="scan-img">
                <div class="scan-info-class">
                    <div class="label">Scan ID:</div>
                    <input type="number" id="id-number" class="inputs-text" disabled>
                </div>
                <div class="scan-info-class">
                    <div class="label">Patient's ID:</div>
                    <input type="number" id="id-number" class="inputs-text" disabled>
                </div>
                <div class="scan-info-class">
                    <div class="label">Date:</div>
                    <input type="datetime" id="date-text" class="inputs-text" disabled>
                </div>
                <div class="scan-info-class">
                    <div class="label">System diagnosis:</div>
                    <input type="text" id="system-diagnosis-text" class="inputs-text" disabled>
                </div>
                <div class="scan-info-class">
                    <div class="label">Final diagnosis:</div>
                    <input type="text" id="final-diagnosis-text" class="inputs-text">
                    <input class="buttons-class update-button" id="update-diagnosis-button" type="button" value="Update"
                        onclick="updateDiagnosis()">
                </div>
            </div>
        </div>
    </main>
</body>

</html>

<script type="text/javascript">
    const scanIdNumber = document.getElementById("scan-id-number");
    const scanNotFoundDiv = document.getElementById("scan-not-found");

    function searchScanById() {
        fetch('/authed/getScan',
            {
                method: 'post',
                body: JSON.stringify({
                    scanId: scanIdNumber.value
                }),
                headers: {
                    'Content-Type': 'application/json',
                    // 'Content-Type': 'application/x-www-form-urlencoded',
                }
            })
            .then(function (response) {
                return response.json();
            })
            .then(function (scanInfo) {
                console.log(scanInfo);
                if (!scanInfo.found) {
                    scanNotFoundDiv.style.display = "block";
                }
                else {
                    //display scan details
                }
            });
    }

    function updateDiagnosis() {

